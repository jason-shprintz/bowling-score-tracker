{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/services/*": ["./services/*"],
      "../types": ["./types"],
      "../types/*": ["./types/*"],
      "@/utils/*": ["./utils/*"],
      "@/screens/*": ["./screens/*"],
      "@/hooks/*": ["./hooks/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
